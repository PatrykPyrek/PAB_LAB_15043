@page
@model PPyrekBackend15043.Razor.Pages.Admin.RestProjects.Tasks.Subtasks.CreateModel
@{
    ViewData["Title"] = "Create Subtask";
    var pid = Request.Query["projectId"];
    var tid = Request.Query["taskId"];
}

<h2>Create Subtask</h2>
<form method="post">
    <input type="hidden" asp-for="ProjectId" />
    <input type="hidden" asp-for="TaskId" />
    <div class="form-group">
        <label asp-for="NewSubtask.Description"></label>
        <input asp-for="NewSubtask.Description" class="form-control" />
        <span asp-validation-for="NewSubtask.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" asp-route-projectId="@pid" asp-route-taskId="@tid" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}