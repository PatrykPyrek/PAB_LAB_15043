@page
@model PPyrekBackend15043.Razor.Pages.Admin.RestProjects.Tasks.CreateModel
@{
    ViewData["Title"] = "Create Task";
    var pid = Request.Query["projectId"];
}

<h2>Create Task for Project @pid</h2>
<form method="post">
    <input type="hidden" asp-for="ProjectId" />
    <div class="form-group">
        <label asp-for="NewTask.Title"></label>
        <input asp-for="NewTask.Title" class="form-control" />
        <span asp-validation-for="NewTask.Title" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" asp-route-projectId="@pid" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}